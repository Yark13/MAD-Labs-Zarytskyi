<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Application.UI.taplike.TapLikeFragment">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/taplike_konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tapLikeFragment_textView_numberLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text="@string/undefined"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/tapLikeFragment_tapLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tap like" />

</FrameLayout>